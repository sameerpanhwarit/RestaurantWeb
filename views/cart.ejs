<body>
    
<!-- header section starts  -->

<header class="header">

    <div id="menu-btn" class="fas fa-bars"></div>

    <a href="#" class="logo"> Coffee <i class="fas fa-mug-hot"></i> </a>

    <nav class="navbar">
        <a href="/dashboard">home</a>
        <a href="/dashboard">about</a>
        <a href="/dashboard">menu</a>
        <a href="/dashboard">review</a>
        <a href="/dashboard">book</a>
    </nav>

    <!-- <a href="#" class="btn-icon"><i class="fa fa-user"></i></a> -->
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent-4" aria-controls="navbarSupportedContent-4" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>
    <a class="nav-link dropdown-toggle profile-text" id="navbarDropdownMenuLink-4" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><i class="fa fa-user"></i> Profile </a>
    <div class="dropdown-menu dropdown-menu-right dropdown-cyan profile-div" aria-labelledby="navbarDropdownMenuLink-4">
        <a class="dropdown-item profile-text" href="#">My Orders</a>
        <a class="dropdown-item profile-text" href="/logout">Log out</a>
    </div>
    <a href="cart.html" class="btn-icon"><i class="fa fa-shopping-cart"></i></a>
</header>
</section>

<!-- header section ends -->

<!-- home section starts  -->

<section class="item" id="item">
    <h1 class="heading">Cart</h1>
    <table class="table">
        <thead class="thead-dark">
          <tr>
            <th scope="col">No</th>
            <th scope="col">Order</th>
            <th scope="col">Quantity</th>
            <th scope="col">Price</th>
          </tr>
        </thead>
        <tbody>
          <!-- <tr>
            <th scope="row">1</th>
            <td>Colombian coffee</td>
            <td>1</td>
            <td>$27</td>
          </tr> -->
          <% for (var i = 0; i < items.length; i++) { %>
            <tr>
              <td><%= i+1 %></td>
              <td><%= items[i].item %></td>
              <td><%= items[i].quantity %></td>
              <td>$<%= items[i].price %></td>

            </tr>
          <% } %>
          <tr>

          <td> </td>
          <td><b>Total Price </b> </td>
          <td> </td>
          <td><b>$<%= total %></b></td>
          </tr>
        </tbody>
      </table>
      <br>
      <br>
      <hr>
      <div class="cart-form" id="book">

        <form action="/order-confirm" method="post">
    
            <input type="text" name="name" placeholder="Name" class="box" required>
            <input type="email" name="email" placeholder="Email" class="box" required>
            <input type="number" name="phone" placeholder="Phone Number" class="box" required >
    
            <textarea name="address" placeholder="Address" class="box" id="" cols="30" rows="10" required></textarea>
    
            <input type="submit" value="Confirm Order" class="book-btn">
    
        </form>
    
    </div>
</section>



<!-- home section ends -->

